{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi" : "off",
        "no-var" : "error",
        "no-multi-spaces" : "error",
        "no-trailing-spaces": "error"
    }
}
